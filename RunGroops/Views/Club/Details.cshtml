@model Club

<section class="py-5">
    <div class="container px-4 px-lg-5 my-5">
        <div class="row gx-4 gx-lg-5 align-items-center">
            <div class="col-md-6"><img class="card-img-top mb-5 mb-md-0" src="@Model.Image" /></div>
            <div class="col-md-6">
                <div class="small mb-1"></div>
                <h1 class="display-5 fw-bolder">@Model.Title</h1>
                <div class="fs-5 mb-5">
                    <span class="text-decoration-line-through"></span>
                    <span>@Model.ClubCategory</span>
                </div>
                <p class="lead">@Model.Description</p>
                <p class="lead">@Model.Address.City</p>
                <p class="lead">@Model.Address.State</p>
                <p class="lead">@Model.Address.Street</p>
                <div class="d-flex">
                    <input class="form-control text-center me-3" id="inputQuantity" value="1" style="max-width: 3rem" />
                    <button class="btn btn-outline-dark flex-shrink-0" type="button">
                        <i class="bi-cart-fill me-1"></i>
                        Apply
                    </button>
                </div>
            </div>
        </div>
    </div>
</section>